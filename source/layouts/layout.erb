<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Rothenberg Wood" %></title>
    <%= favicon_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Hind:400,700" %>
    <%= stylesheet_link_tag "site" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="wrap m2 bg-white">
      <%= partial 'header' %>
      <div class="max-width-4 mx-auto px2 pb4">
        <%= yield %>
      </div>
    </div>
    <%= javascript_include_tag "site" %>
  </body>
</html>
